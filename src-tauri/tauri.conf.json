{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "joyful",
  "version": "0.1.0",
  "identifier": "com.james.joyful",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "joyful",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
      },
      "wix": {
        "language": ["zh-CN", "en-US"]
      }
    },
    "macos": {
      "minimumSystemVersion": "10.13"
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}